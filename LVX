package main

import "fmt"

func average() float64 {
	var sum int
	var count int
	count = -1
	var i int
	for {
		fmt.Println("请输入一个整数（输入0结束):")
		fmt.Scanf("%d", &i)
		sum += i
		count++
		if i == 0 {
			break
		}
	}
	return float64(sum) / float64(count)
}
func main() {

	fmt.Println("平均值为%v", average())
}
